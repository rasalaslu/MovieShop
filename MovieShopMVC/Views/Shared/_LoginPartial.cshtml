@using ApplicationCore.ServiceInterfaces

@* if user is not login then show login and register buttons*@
@*if login success, show his/her name links for purchases, favorites and logout button  *@

@inject ICurrentUserService _userService

@if (_userService.IsAuthenticated)
{
    <div class="navbar-collapse ">
        <ul class="navbar-nav ml-auto">

            <li class="nav-item dropdown text-capitalize">
                <a class="nav-link dropdown-toggle" id="dropdown" data-toggle="dropdown">
                    @_userService.FullName
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdown01">
                    <a class="dropdown-item" asp-controller="User" asp-action="Purchases"> Purchased Movies </a>
                    <a class="dropdown-item" asp-controller="User" asp-action="Favorites"> Favorite Movies </a>
                    <a class="dropdown-item" asp-controller="User" asp-action="Details"> User Account </a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout"> Logout </a>
                </div>
            </li>
        </ul>
    </div>
}
else
{
    <div class="navbar-collapse collapse w-100">
        <ul class="navbar-nav ml-auto">
            <li class="navbar-item pr-4">
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login"> Login </a>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register"> Register </a>
            </li>
        </ul>
    </div>
}